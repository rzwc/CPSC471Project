@{
    ViewData["Title"] = "Write a Review";
}

<div>
    <hr class="invisiblehr">
    <h4 class="display-4 text-center">Write a Review</h4>
    <hr>

    <p class="text-center">We would appreciate you telling us about your experience!</p>

    <div class="container">
        <form>
            <div class="form-group">
                <label for="reviewCustomerName">Name</label>
                <input type="text" class="form-control" id="reviewCustomerName" value="John Customer" disabled>
            </div>
            <div class="form-group">
                <label for="reviewRating">Rating</label>
                <select name="reviewRating" id="reviewRating" class="custom-select">
                    <option value=""></option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="reviewComment">Comments</label>
                <textarea class="form-control" id="reviewComment" rows="3"></textarea>
            </div>
            <div class="float-md-right">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>
</div>