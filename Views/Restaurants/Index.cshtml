@model IEnumerable<RestaurantMS.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<h1>Our Restaurants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Address
            </th>
            <th>
                Opens at
            </th>
            <th>
                Until
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End_Time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Store_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Store_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Store_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
